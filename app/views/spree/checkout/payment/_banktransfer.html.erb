<% if (banks = Spree::Bank.active).any? %>
  <span>Reference  Number: @order.number</span>
  <table>
    <tr>
      <th>Name</th>
      <th>Account No</th>
    </tr>
    <% banks.each do |bank| %>
      <tr>
        <td><%= bank.name %></td>
        <td><%= bank.account_no %></td>
      </tr>
    <% end %>
  </table>
<% end %>